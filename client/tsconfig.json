{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "DOM"],             
    "jsx": "react",                    
    "outDir": "./dist",                       
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@style/*": ["src/common/style/*"],
      "@utils/*": ["src/common/utils/*"],
      "@store/*": ["src/common/store/*"],
      "@dispatch/*": ["src/common/dispatch/*"],
      "@imgs/*": ["public/imgs/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "public"]
}